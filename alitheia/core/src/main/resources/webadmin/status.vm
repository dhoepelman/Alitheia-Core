<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN"
  "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
    <meta http-equiv="refresh" content="10" />
    <link rel="stylesheet" type="text/css" media="screen" href="screen.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="webadmin.css" />
  </head>
  <body style="font-size: 10pt;">      
    
    ## Display status
    <fieldset id="status">
      <legend>$tr.label("status")</legend>
      <ul>
        <li class="uptime">$tr.label("uptime") : $getUptime()</li>
        <li class="queue">$tr.label("queue_length") : $getJobWaitStats()</li>
      </ul>
      <table>
        <tr>
          <td style="width: 50%; padding: 0;">
            <form id="start" method="post" action="restart">
              <input type="submit" style="width: 100%;" value="$tr.label("restart")" />
            </form>
          </td>
          <td style="width: 50%; padding: 0;">
            <form id="stop" method="post" action="stop">
              <input type="submit" style="width: 100%;" value="$tr.label("stop")" />
            </form>
          </td>
        </tr>
      </table>
    </fieldset>
    
    ## Display job info
    <fieldset id="jobs">
      <legend>$tr.label("job_info")</legend>
        <table style="width: 100%;" cellspacing="0" cellpadding="3">
          <tr>
            <td>$tr.label("executing") :</td>
            <td class="number">$getJobFailStats()</td>
          </tr>
          <tr>
            <td>$tr.label("waiting") :</td>
            <td class="number">$getJobWaitStats()</td>
          </tr>
          <tr>
            <td>$tr.label("failed") :</td>
            <td class="number">$getFailedJobs()</td>
          </tr>
          <tr>
            <td>$tr.label("total") :</td>
            <td class="number">$getTotalJobs()</td>
          </tr>
          <tr class="newgroup">
            <td>$tr.label("workers") :</td>
            <td class="number">$getThreads()</td>
          </tr>
        </table>
    </fieldset>
    
    ## Display option
    <fieldset id="options">
      <legend>$tr.label("options")</legend>
      <form id="motd" method="post" action="motd">
        <table>
          <tr>
        <td>$tr.label("motd") :</td>
          </tr>
          <tr>
        <td>
          <input type="text" style="width: 99%;" class="form" name="motdtext"/>
        </td>
          </tr>
          <tr>
        <td style="text-align: right;">
          <input type="submit" style="width: 100px;" value="$tr.label("set_save")" />
        </td>
          </tr>
        </table>
      </form>
    </fieldset>
    
  </body>
</html>